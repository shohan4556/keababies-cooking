{
  "version": "1.0.0",
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "lib": ["es2015", "dom"]
  },
  "exclude": ["node_modules"]
}
